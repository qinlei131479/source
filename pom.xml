<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.course</groupId>
    <artifactId>course</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <description>学习课程</description>
    <name>${project.artifactId}</name>

    <modules>
        <module>course-common</module>
        <module>course-learn</module>
        <module>course-visual</module>
        <module>course-biz</module>
        <module>course-gateway</module>
        <module>course-auth</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <lombok.version>1.18.8</lombok.version>
        <mysql.version>5.1.47</mysql.version>
        <mybatis-plus.version>3.4.0</mybatis-plus.version>
        <pagehelper.version>5.1.6</pagehelper.version>
        <druid.version>1.1.22</druid.version>

        <hutool.version>5.4.7</hutool.version>
        <swagger.core.version>1.5.24</swagger.core.version>
        <xxl-job.version>2.2.0</xxl-job.version>
        <sharding-sphere.version>4.0.0-RC1</sharding-sphere.version>
        <redisson-version>3.16.0</redisson-version>
        <spring-boot.version>2.4.2</spring-boot.version>
        <spring-cloud.version>2020.0.0</spring-cloud.version>
        <spring-cloud-alibaba.version>2021.1</spring-cloud-alibaba.version>
        <caffeine.version>2.8.8</caffeine.version>
        <captcha.version>2.2.0</captcha.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!--数据库-->
            <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>${mysql.version}</version>
            </dependency>
            <!-- spring boot 依赖 -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring-boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- spring cloud 依赖 -->
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring-cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!--spring cloud alibaba-->
            <dependency>
                <groupId>com.alibaba.cloud</groupId>
                <artifactId>spring-cloud-alibaba-dependencies</artifactId>
                <version>${spring-cloud-alibaba.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <!-- course核心包依赖 -->
            <dependency>
                <groupId>com.course</groupId>
                <artifactId>course-common-job</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.course</groupId>
                <artifactId>course-common-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.course</groupId>
                <artifactId>course-common-cache</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.course</groupId>
                <artifactId>course-common-mybatis</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.course</groupId>
                <artifactId>course-common-shardingjdbc</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.course</groupId>
                <artifactId>course-common-redisson</artifactId>
                <version>${project.version}</version>
            </dependency>
            <!-- 业务公共模块 -->
            <dependency>
                <groupId>com.course</groupId>
                <artifactId>course-biz-sys</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- course learn依赖包，正式环境无用 -->
            <dependency>
                <groupId>com.course</groupId>
                <artifactId>course-learn-spring</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <!--阿里云主仓库，代理了maven central和jcenter仓库，上一个好像不行 -->
        <repository>
            <id>public</id>
            <name>aliyun nexus</name>
            <url>http://maven.aliyun.com/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>

    <!-- 多环境配置 -->
    <profiles>
        <profile>
            <id>dev</id>
            <properties>
                <profile.active>dev</profile.active>
                <service.nacos.host>styn-register</service.nacos.host>
                <service.nacos.port>8848</service.nacos.port>
                <service.nacos.namespace>ff7c4efc-b6fc-4f37-8f0c-a96e5fc1a445</service.nacos.namespace>
                <service.dataId.prefix>course-application</service.dataId.prefix>
                <service.group>COURSE_GROUP</service.group>
                <service.log.root>/Users/qinlei/Downloads/logs</service.log.root>
            </properties>
            <activation>
                <jdk>[1.8,)</jdk>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>uat</id>
            <properties>
                <profile.active>uat</profile.active>
                <service.nacos.host>styn-register</service.nacos.host>
                <service.nacos.port>8848</service.nacos.port>
                <service.nacos.namespace>ff7c4efc-b6fc-4f37-8f0c-a96e5fc1a445</service.nacos.namespace>
                <service.dataId.prefix>course-application</service.dataId.prefix>
                <service.group>COURSE_GROUP</service.group>
                <service.log.root>/opt/data/logs</service.log.root>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <profile.active>prod</profile.active>
                <service.nacos.host>styn-register</service.nacos.host>
                <service.nacos.port>8848</service.nacos.port>
                <service.nacos.namespace>ff7c4efc-b6fc-4f37-8f0c-a96e5fc1a445</service.nacos.namespace>
                <service.dataId.prefix>course-application</service.dataId.prefix>
                <service.group>COURSE_GROUP</service.group>
                <service.log.root>/opt/data/logs</service.log.root>
            </properties>
        </profile>
    </profiles>

    <!-- 项目构建 -->
    <build>
        <finalName>${project.name}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>${spring-boot.version}</version>
                    <configuration>
                        <finalName>${project.build.finalName}</finalName>
                        <layers>
                            <enabled>true</enabled>
                        </layers>
                    </configuration>
                    <executions>
                        <execution>
                            <goals>
                                <goal>repackage</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>